[init]
  defaultBranch = main

[user]
  name = John Kyvetos 
  email = johnkyvetos@gmail.com

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[core]
  editor = hx
  pager = cat
  compression = 6

[branch]
  sort = -committerdate

[status]
  branch = true

[commit]
  verbose = true

[color]
  ui = auto

[credential]
  helper = store

[tag]
  sort = -version:refname

[interactive]
  diffFilter = delta --color-only

[add.interactive]
  useBuiltin = false

[delta]
  features = side-by-side line-numbers decorations
  navigate = true
  plus-style = syntax "#003800"
  minus-style = syntax "#3f0001"

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
  hunk-header-decoration-style = cyan box ul

[delta "line-numbers"]
  line-numbers-left-style = cyan
  line-numbers-right-style = cyan
  line-numbers-minus-style = 124
  line-numbers-plus-style = 28

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
  algorithm = histogram

[maintenance]
  auto = true
  strategy = incremental

[help]
  autocorrect = prompt

[alias]
  graph = "!f() { count=$1; if [ -z \"$count\" ]; then count=5; fi; git log --all --graph --decorate --oneline -n \"$count\"; }; f"
  l = "!f() { count=$1; if [ -z \"$count\" ]; then count=5; fi; git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -n \"$count\"; }; f"
  ignore = "!gi() { local IFS=','; curl -sL \"https://www.toptal.com/developers/gitignore/api/\\$*\"; }; gi"


# references:
# https://micahkepe.com/blog/gitconfig/
